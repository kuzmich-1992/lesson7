
= form_for @assessment do |form| 
  = form.label :title 
  = form.text_field :title 
  #questions
    %p Questions
    = form.fields_for :questions, @assessment.questions.build do |question| 
      = render 'question', f: question
      .links
        = link_to_add_association 'add', form, :questions, partial: 'question'
  .actions
    = form.submit 'Save' 

